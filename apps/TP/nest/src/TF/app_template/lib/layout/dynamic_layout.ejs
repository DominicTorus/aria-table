import 'package:flutter/material.dart';

class DynamicScreenLayout extends StatelessWidget {
  final String title;
  final Widget body;
  final AppBar? customAppBar;
  final Widget? footer;

  const DynamicScreenLayout({
    super.key,
    required this.title,
    required this.body,
    this.customAppBar,
    this.footer,
  });

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: customAppBar ?? AppBar(title: Text(title)),
      body: body,
    );
  }
}
